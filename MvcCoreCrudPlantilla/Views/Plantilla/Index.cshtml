@{
}

@model List<Plantilla>

<h1>PLANTILLA EN NÓMINA</h1>

@if(Model != null)
{
    <table class="table table-info table-bordered">
        <thead>
            <tr>
                <th>APELLIDO</th>
                <th>FUNCION</th>
                <th>SALARIO</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Plantilla plantilla in Model)
            {
                <tr>
                    <td>@plantilla.Apellido</td>
                    <td>@plantilla.Funcion</td>
                    <td>@plantilla.Salario €</td>
                    <td>
                        <a class="btn btn-success" asp-asp-controller="Plantilla" asp-action="Details" asp-route-id="@plantilla.IdEmpleado">Details</a>
                        <a class="btn btn-warning" asp-asp-controller="Plantilla" asp-action="Update" asp-route-id="@plantilla.IdEmpleado">Update</a>
                        <a class="btn btn-danger" asp-asp-controller="Plantilla" asp-action="Delete" asp-route-id="@plantilla.IdEmpleado">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
